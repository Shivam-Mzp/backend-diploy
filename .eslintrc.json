{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 13
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^((req|res|next)$|_)" }
    ],
    "eol-last": "error",
    "no-trailing-spaces": "error"
  }
}
